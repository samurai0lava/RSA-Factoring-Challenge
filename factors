import sys


def factorize(num):
    """
    Factorizes a given number into a list of prime factors.

    Args:
        num (int): The number to factorize.

    Returns:
        list: A list of prime factors of the number.
    """
    factors = []
    for i in range(2, int(num ** 0.5) + 1):
        while num % i == 0:
            factors.append(i)
            num //= i
    if num > 1:
        factors.append(num)
    return factors


def main():
    """
    Main function to read numbers from a file and print their factorizations.

    Reads a file path from the command-line argument, opens the file,
    and for each line, factorizes the number and prints the factorization.
    """
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        return

    file_path = sys.argv[1]
    with open(file_path, 'r') as file:
        for line in file:
            num = int(line)
            factors = factorize(num)
            print(f"{num}={factors[0]}*{factors[1]}")


if __name__ == '__main__':
    main()

